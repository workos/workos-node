{
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every 2 weeks on Tuesday"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "groupName": "minor and patch updates"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": false
    }
  ]
}
